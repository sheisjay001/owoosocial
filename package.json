{
  "name": "autopilot-social-ai",
  "version": "1.0.0",
  "scripts": {
    "client-install": "cd client && npm install",
    "server-install": "cd server && npm install",
    "build-client": "cd client && npm run build",
    "build": "node build-deploy.js",
    "vercel-build": "cd client && npm install --legacy-peer-deps && npm run build && cd .. && mkdir -p public && cp -r client/dist/* public/",
    "start": "node server/index.js"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "groq-sdk": "^0.37.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.2",
    "node-cron": "^4.2.1",
    "node-telegram-bot-api": "^0.67.0",
    "nodemon": "^3.1.11",
    "openai": "^6.15.0",
    "resend": "^6.6.0"
  }
}